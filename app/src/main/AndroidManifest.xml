<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.oubowu.slideback.demo"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"

            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"><!--android:configChanges="orientation|screenSize|keyboardHidden"-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".SecondActivity"

            android:label="@string/title_activity_second"
            android:theme="@style/AppTheme.NoActionBar.Second"><!--android:configChanges="orientation|screenSize|keyboardHidden"-->
        </activity>
        <activity
            android:name=".ScrollActivity"
            android:label="@string/title_activity_scroll"
            android:theme="@style/Third"><!--android:configChanges="orientation|screenSize|keyboardHidden"-->
        </activity>
        <activity
            android:name=".FrescoActivity"
            android:label="PageWithFrescoImage"
            android:theme="@style/AppTheme.NoActionBar.Second">
        </activity>

    </application>

</manifest>